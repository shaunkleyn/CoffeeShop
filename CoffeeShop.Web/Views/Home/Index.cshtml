@model BuyCoffeeViewModel
@{
    ViewData["Title"] = "Home Page";
}
@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="ClientEmailAddress">Client Email Address</label>
        @Html.EditorFor(x => x.ClientEmailAddress, new { @class = "form-control", @type = "email" })
        <small>This will be used to allocate loyalty points</small>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quanity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                <tr>
                    <td>@Model.OrderItems[i].ProductName</td>
                    <td>
                        @Html.HiddenFor(model => model.OrderItems[i].ProductId)
                        @Html.HiddenFor(model => model.OrderItems[i].ProductName)
                        @Html.DisplayFor(model => model.OrderItems[i].Price)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.OrderItems[i].Quantity, new { @class = "form-control" })

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary mb-2">Place Order</button>

}